@model HumanMobility.Models.BugReportViewModel
<div>
    @using (Html.BeginForm("Index", "BugReport", FormMethod.Post, new { @class = "form-horizontal col-md-12" }))
    {
        @Html.AntiForgeryToken()
        <br />
        <h3>Have a problem? Submit as a bug report!</h3>
        @Html.EditorFor(model => model.Message, new
{
    htmlAttributes = new
    {
        @class = "form-control",
        rows = "5",
        @style = "max-width: 6000px",
        @id = "bugReportEditor"
    }
})
        <span id="characters" style="float: right">299</span>
        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })

        <div class="form-group">
            <br />
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        //resize: vertical ez kell
    }
</div>
